class Test {
    constant PIPE := new Pipe()

    @class
    method main() {
        new Thread(method() {
            def output := PIPE.openOutputStream()
            output.writeLine("Hello, world!")
            output.writeLine("Cool, it works!")
            output.write(65)
            output.write(66)
            output.write(67)
            output.write(10)
            output.close()
        }).start()

        new Thread(method() {
            def input := PIPE.openInputStream()
            var i := input.readInt8()
            while i != null {
                Console.outputStream.write(i)
                i := input.readInt8()
            }
        }).start()
    }
}