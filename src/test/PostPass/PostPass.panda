class PostPass {
    var a:Int := 5

    method test1(a:Int) {
        if true
            self.a := a
    }
    @post(self.a = a)
    
    method test2(a:Int) {
        self.a += 1
    }
    @post(self.a = @pre(self.a) + 1)
    
    @class
    @pre(v >= 0)
    method test3(v:Int):Int {
        return v * v
    }
    @post(@return > v & @return <= v * v)
    
    @class
    method main() {
        var p := new PostPass()
        p.test1(10)
        p.test2(10)
        Console.writeLine(p.a)
        Console.writeLine(test3(64))
    }
}