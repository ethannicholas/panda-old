package org.pandalanguage.pandac.tree

class Catch : Block {
    var exception:Variable
    
    constructor(position:Position, parent:SymbolTable, 
            exception:Variable) {
        super.constructor(position, parent)
        self.exception := exception
        symbolTable.putVariable(exception)
    }

    @override
    method markLive() {
        if !live {
            super.markLive()
            exception.type.markLive()
        }
    }
}