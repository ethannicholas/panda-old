package org.pandalanguage.pandac.tree

uses org.pandalanguage.pandac.types.Type

class NewArrayWithLength : Value {
    @pre(!t.isNullable)
    constructor(position:Position, t:Type, arrayLength:Value) {
        super.constructor(position, t)
        add(arrayLength)
    }
    
    function arrayLength():Value {
        return self[0]->(Value)
    }
    
    @override
    function format(fmt:String):String {
        return "new " + type.name + "(" + arrayLength + ")"
    }
}