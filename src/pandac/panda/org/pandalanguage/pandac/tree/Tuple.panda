package org.pandalanguage.pandac.tree

uses org.pandalanguage.pandac.types.Type

================================================================================
Represents a tuple literal.
================================================================================
class Tuple : Value {
    ============================================================================
    The values in the tuple.
    ============================================================================
    def values:ListView<Value>

    constructor(position:Position, type:Type, values:ListView<Value>) {
        super.constructor(position, type)
        self.values := values
    }
    
    @override
    function ->>():String {
        return "(\{values.join(', ')})"
    }
}