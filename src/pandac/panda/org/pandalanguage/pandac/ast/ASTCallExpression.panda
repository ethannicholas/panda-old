package org.pandalanguage.pandac.ast

uses org.pandalanguage.pandac.tree.Position

class ASTCallExpression : ASTExpression {
    def target:ASTExpression
    def parameters:ImmutableArray<ASTExpression>

    constructor(target:ASTExpression, parameters:ListView<ASTExpression>) {
        super.constructor(target.position)
        self.target := target
        self.parameters := new ImmutableArray<ASTExpression>(parameters)
    }    

    @override
    function format(fmt:String):String {
        return target + "(" + parameters.join(", ") + ")"
    }
}