package panda.ui.events

class MouseEvent : Event {
	constant LEFT:Int8 := 1
	constant MIDDLE:Int8 := 2
	constant RIGHT:Int8 := 3

	def button:Int8

    def x:Int32

    def y:Int32

    init(type:Type, button:Int8, x:Int32, y:Int32) {
        super.init(type)
        self.button := button
        self.x := x
        self.y := y
    }
}