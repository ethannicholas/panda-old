package panda.gl.events

uses panda.gl.Point

class MouseEvent : Event {
	constant LEFT:Int8 := 1
	constant MIDDLE:Int8 := 2
	constant RIGHT:Int8 := 3

	def button:Int8

    def position:Point

    constructor(type:EventType, button:Int8, position:Point) {
        super.constructor(type)
        self.button := button
        self.position := position
    }
}